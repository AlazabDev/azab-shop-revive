# ========================================
# pnpm Configuration
# ========================================

# استخدام pnpm كمدير حزم افتراضي
package-manager=pnpm

# ========================================
# Dependency Resolution
# ========================================

# عدم فرض صرامة على peer dependencies
strict-peer-dependencies=false

# تثبيت peer dependencies تلقائياً
auto-install-peers=true

# رفع التبعيات للأعلى (Capacitor compatibility)
shamefully-hoist=true

# استخدام hoisted node linker
node-linker=hoisted

# ========================================
# Performance Optimization
# ========================================

# استخدام الملفات المحلية أولاً
prefer-offline=true

# عدد إعادة المحاولات عند الفشل
fetch-retries=5

# مهلة التحميل (1 دقيقة)
fetch-timeout=60000

# ========================================
# Lockfile Settings
# ========================================

# عدم تحديث lockfile تلقائياً
frozen-lockfile=false

# ========================================
# Registry
# ========================================

# استخدام registry الافتراضي
registry=https://registry.npmjs.org/

# ========================================
# Store Settings
# ========================================

# مكان تخزين الحزم المحلي
# store-dir=~/.pnpm-store

# ========================================
# Scripts
# ========================================

# تشغيل scripts بالترتيب
recursive-install=false

# ========================================
# Workspace Settings
# ========================================

# إنشاء symlinks للـ workspace
link-workspace-packages=true

# ========================================
# Security
# ========================================

# التحقق من صحة TLS
strict-ssl=true
